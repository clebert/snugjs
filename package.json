{
  "name": "snugjs",
  "version": "2.0.0",
  "description": "Create reactive web components using generator functions.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/snugjs.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "sideEffects": false,
  "type": "module",
  "exports": "./lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "node onecfg.js",
    "ci": "run-p compile:check compile:emit format:check lint test",
    "postci": "size-limit",
    "compile:check": "tsc --pretty",
    "compile:emit": "tsc --pretty --project tsconfig.emit.json",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --silent --passWithNoTests",
    "release": "npm version",
    "postrelease": "git push --follow-tags"
  },
  "devDependencies": {
    "@jest/globals": "^29.2.2",
    "@onecfg/standard": "^6.5.1",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@swc/core": "^1.3.11",
    "@swc/jest": "^0.2.23",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^3.0.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "npm-run-all": "^4.1.5",
    "onecfg": "^5.2.1",
    "prettier": "^2.7.1",
    "size-limit": "^8.1.0",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "@snugjs/html": "^3.0.0"
  },
  "size-limit": [
    {
      "name": "brotli compression",
      "limit": "757 B",
      "path": "./lib/index.js",
      "brotli": true
    },
    {
      "name": "gzip compression",
      "limit": "886 B",
      "path": "./lib/index.js",
      "gzip": true
    },
    {
      "name": "no compression",
      "limit": "1839 B",
      "path": "./lib/index.js",
      "gzip": false
    }
  ],
  "wallaby": {
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  }
}
